<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E0ECF8">

    <!-- Scan to Login Button -->
    <Button
        android:id="@+id/scanToLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan to login"
        android:background="@drawable/rounded_button"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center" />

    <!-- Camera Preview or Placeholder -->
    <FrameLayout
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/rounded_frame"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <!-- Save Credentials and Enter Token Buttons in a Horizontal Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Save Credentials Button -->
        <Button
            android:id="@+id/saveCredentialsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Credentials"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <!-- Enter Token Button -->
        <Button
            android:id="@+id/enterTokenButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enter Token"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Login Status Indicator -->
    <TextView
        android:id="@+id/loginStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Authenticate"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>
